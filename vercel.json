{
    "version": 2,
    "functions": {
        "api/main.py": {
            "memory": 300,
            "maxDuration": 10,
            "includeFiles": "templates/**"
        }
    },
    "routes": [
        { "handle": "filesystem" },
        { "src": "/", "dest": "/public/index.html" },
        { "src": "/new", "dest": "/public/sucepute.html" },
        { "src": "/favicon.ico", "dest": "/public/favicon.ico" },
        {
            "src": "^(/.*)",
            "methods": ["GET", "HEAD"],
            "dest": "api/main.py"
        }
    ],
    "build": {
        "env": {
            "NOTION_DATA_DIR": "/tmp/notion-py"
        }
    },
    "env": {
        "NOTION_DATA_DIR": "/tmp/notion-py"
    }
}